{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "platformAutomerge": true,
  "ignoreTests": true,
  "automergeType": "pr",
  "commitMessageSuffix": "[skip ci]",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
